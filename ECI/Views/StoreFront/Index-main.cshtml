@model ECI.Models.Category

@{
    ViewBag.Title = @Model.Name;
}


<br/>
<br/>

<div class="row">
    <div class="col-xs-12 col-md-3">
        <ul class="nav nav-pills nav-stacked">

            @if (Model.Name == "Men")

            {
                <li class="active">
                    <a href="~/StoreFront/Index/1">Men</a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/1">Men</a>
                </li>
            }
            @if (Model.Name == "Women")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/2">Women</a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/2">Women</a>
                </li>
            }
            @if (Model.Name == "Kids")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/3">Kids</a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/3">Kids</a>
                </li>
            }
            @if (Model.Name == "Babies")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/4">Babies</a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/4">Babies</a>
                </li>
            }

        </ul>
    </div>
    <div class="col-xs-12 col-md-9">
        <div class="row">
    @foreach (var product in Model.Products)
            {
        <div class="col-xs-12 col-md-3">
            <div class="thumbnail">
                <img class="img-responsive" src="~/Images/Products/@(product.Name).png">
                

                    <div class="caption text-center">
                        <p>
                            <b>Name:</b> <span>@product.Name</span>
                        </p>
                        <p>
                            <b>Price:</b> <span>@product.Price USD</span>
                        </p>
                        <p class="text-center">
                            @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = product.Id }, new { @class = "btn btn-info" })
                        </p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
